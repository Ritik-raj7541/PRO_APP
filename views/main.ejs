<%- include('partials/header'); -%>

<p>
  welcome <%= user %>
</p>

<div class="container">
  <!-- there will be a post -->
  <!-- post ends here -->
  <% postMaterial.forEach(function(element){%>
    <div class="box">
    <h3>
      <a href="/post/<%= element._id %>"><%= element.title %></a>
    </h3>
    <% var a = element.post %> <%= a.substring(0,100) %> ...
    <a href="/user/<%= element.UserId %>">
      <h5><i>by <%= element.name %> </i></h5> <h6> on <%= element.dateCreated %></h6>
    </a>
    <p>
     
      <div class="reaction">
      <form action="/like" method="post" class="react">
        <button style="border: none;" type="submit" name="liked" value=<%=element._id %>><i class="fa-solid fa-heart" style="color: #161717;"></i></button>
         <%= element.like.length %>
      </form>
      <form action="/dislike" method="post" class="react">
         <button style="border: none;" type="submit" name="disliked" value=<%=element._id %>><i class="fa-solid fa-heart-crack" style="color: #02060d;"></i></button>
         <%= element.dislike.length %> 
      </form>
      <a href="/comment/<%= element._id %>" class="react"><i class="fa-solid fa-comment mx-2"></i></a>
    </div>
    </p>
  </div>
    <!-- <hr align="center"> -->
  <% }) ; %> 
</div>


<!-- compose button -->
<div class="container my-3">
  <a href="/compose">
    <button class="btn">Add your post</button>
  </a>
</div>

<div class="container">
  <form action="/logout" method="post">
    <button class="btn">Log Out</button>
  </form>
</div>

<%- include('partials/footer'); -%>
