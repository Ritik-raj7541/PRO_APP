<%- include('partials/header'); -%>

<div class="container">
  <h1>Compose Page</h1>
  <form action="/compose" method="post">
    <!-- heading -->
    <div class="mb-3">
      <label for="exampleFormControlTextarea1" class="form-label"
        > <h3>Heading</h3>  </label
      >
      <textarea
        class="form-control"
        id="exampleFormControlTextarea1"
        rows="3"
        name="heading"
        placeholder="heading"
      ></textarea>
    </div>
    <!-- post -->
    <div class="mb-3">
      <label for="exampleFormControlTextarea1" class="form-label"
        ><h3>Content</h3></label
      >
      <textarea
        class="form-control"
        id="exampleFormControlTextarea1"
        rows="3"
        name="content"
        placeholder="write your content here"
      ></textarea>
    </div>
    <button type="submit" class="btn btn-dark">Publish</button>
  </form>
</div>

<%- include('partials/footer'); -%>
